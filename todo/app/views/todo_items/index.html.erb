<p id="notice"><%= notice %></p>

<h1>Listing Todo Items</h1>


      <h2>Add Your Item Here!</h2>
      <!-- <th colspan="3"></th> -->

  <body>
    <div class="item_box">
    <% @todo_items.each do |todo_item| %>
      <ul>
      <li><h3><%= todo_item.description %></h3></li>
      <li><%= link_to 'Show', todo_item %></li>
      <li><%= link_to 'Edit', edit_todo_item_path(todo_item)%></li>
      <li><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
    <% end %>
  </div>
  </body>

<br>

<div class="button_brown"><%= link_to 'New Todo item', new_todo_item_path %></div>
